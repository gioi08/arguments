    <body>
        <h1>Guarda la console!</h1>
    </body>
    <script>
        function confronta(){
            var mediaPrimoQuad=arguments[0];
            var mediaSecondoQuad=0.0;
            //Calcola media
            for (let i=1;i<arguments.length;i++){
                mediaSecondoQuad+=arguments[i];
            }
            mediaSecondoQuad/=arguments.length-1;
            //Verifica relazione
            if(mediaPrimoQuad>mediaSecondoQuad){
                return 1;
            }
            else{
                if(mediaPrimoQuad<mediaSecondoQuad){
                    return 2;
                }
                else{
                    return 3;
                }
            }
        }
        var risultato=confronta(7.8,8,9,10,6,7,5);
        switch(risultato){
            case 1:
                console.log("La media del primo quadrimestre era maggiore di quella del secondo");
                break;
            case 2:
                console.log("La media del secondo quadrimestre era maggiore di quella del primo");
                break;
            case 3:
                console.log("Le medie sono rimaste uguali");
                break;
            default:
                console.log("Errore");
                break;
        }
    </script>
</html>
